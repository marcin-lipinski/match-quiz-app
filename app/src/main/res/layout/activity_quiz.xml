<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         xmlns:tools="http://schemas.android.com/tools"
         xmlns:app="http://schemas.android.com/apk/res-auto"
         tools:context=".activities.QuizActivity"
         android:background="#212A3E"
         android:backgroundTint="#212A3E"
         android:outlineSpotShadowColor="#00FFFFFF"
         android:outlineAmbientShadowColor="#00FFFFFF">

    <TextView
            android:layout_marginTop="20dp"
            app:flow_horizontalAlign="center"
            android:id="@+id/question_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp"
            android:fontFamily="@font/asul_bold"
            android:textColor="@color/white"/>

    <com.yuyakaido.android.cardstackview.CardStackView
        android:id="@+id/cardstackview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="100dp"
        android:layout_marginHorizontal="20dp"
        android:background="#212A3E"
        android:backgroundTint="#212A3E"
        android:outlineSpotShadowColor="#00FFFFFF"
        android:outlineAmbientShadowColor="#00FFFFFF"/>
    <TextView
            android:layout_marginTop="100dp"
            app:flow_horizontalAlign="center"
            android:text="@string/your_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30sp"
            android:fontFamily="@font/asul_bold"
            android:textColor="@color/white"
            android:id="@+id/your_score"
            android:visibility="invisible"/>

    <TextView
            android:layout_below="@id/your_score"
            android:id="@+id/score_league_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/asul_bold"
            android:textColor="@color/white"
            android:visibility="invisible"/>
    <TextView
            android:layout_below="@id/your_score"
            android:id="@+id/score_season_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/asul_bold"
            android:textColor="@color/white"
            android:visibility="invisible"/>
    <TextView
            android:layout_below="@id/score_season_name"
            android:id="@+id/score_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/asul_bold"
            android:textColor="@color/white"
            android:visibility="invisible"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/score_score"
            android:id="@+id/return_button"
            android:textAlignment="center"
            android:textSize="25sp"
            android:text="@string/finish"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/asul_bold"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            android:background="@drawable/rounded_button_yellow"
            android:textColor="#212A3E"/>
    <nl.dionsegijn.konfetti.xml.KonfettiView
            android:id="@+id/konffettiView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</RelativeLayout>