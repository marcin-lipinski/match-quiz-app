<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#212A3E"
        android:background="#212A3E"
        android:outlineAmbientShadowColor="#00FFFFFF"
        android:outlineSpotShadowColor="#00FFFFFF">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="40sp"
            app:cardElevation="20sp"
            app:cardBackgroundColor="#BDCDD6"
            android:background="#BDCDD6"
            android:outlineAmbientShadowColor="#00FFFFFF"
            android:outlineSpotShadowColor="#00FFFFFF">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#BDCDD6"
                android:outlineAmbientShadowColor="#00FFFFFF"
                android:outlineSpotShadowColor="#00FFFFFF">
            <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/asul_bold"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="30dp"
                    android:textAlignment="center"
                    android:id="@+id/match_date"
                    android:textSize="22sp"
                    android:textColor="#212A3E"/>
            <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/match_date"
                    android:layout_marginTop="15dp"
                    android:textAlignment="center"
                    android:id="@+id/winner_city_distance"
                    android:fontFamily="@font/asul_bold"
                    android:textSize="18sp"
                    android:textColor="#212A3E"/>

            <TextView
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_below="@id/winner_city_distance"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/asul_bold"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:id="@+id/home_team_name"
                    android:textColor="#212A3E"/>
            <TextView
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_below="@id/winner_city_distance"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/asul_bold"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:id="@+id/away_team_name"
                    android:textColor="#212A3E"/>

            <ImageView
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="true"
                    android:id="@+id/home_team_logo"
                    android:layout_below="@id/home_team_name"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:contentDescription="@string/logo_of_home_team"/>
            <ImageView
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/away_team_logo"
                    android:layout_below="@id/away_team_name"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:contentDescription="@string/logo_of_away_team"/>

            <Button android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:id="@+id/score_one_button"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp"
                    android:layout_below="@id/home_team_logo"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/rounded_button_yellow"
                    android:fontFamily="@font/asul_bold"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="#212A3E"/>
            <Button android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:id="@+id/score_two_button"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="30dp"
                    android:layout_below="@id/away_team_logo"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/rounded_button_yellow"
                    android:fontFamily="@font/asul_bold"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="#212A3E"/>
            <Button android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:id="@+id/score_three_button"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="30dp"
                    android:layout_below="@id/score_one_button"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_button_yellow"
                    android:fontFamily="@font/asul_bold"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="#212A3E"/>
            <Button android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:id="@+id/score_four_button"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="30dp"
                    android:layout_below="@id/score_two_button"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/rounded_button_yellow"
                    android:fontFamily="@font/asul_bold"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:textColor="#212A3E"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>