<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#212A3E"
        android:background="#212A3E"
        android:outlineAmbientShadowColor="#00FFFFFF"
        android:outlineSpotShadowColor="#00FFFFFF">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="40sp"
            app:cardElevation="20sp"
            app:cardBackgroundColor="#BDCDD6"
            android:background="#BDCDD6"
            android:outlineAmbientShadowColor="#00FFFFFF"
            android:outlineSpotShadowColor="#00FFFFFF">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#BDCDD6"
                android:outlineAmbientShadowColor="#00FFFFFF"
                android:outlineSpotShadowColor="#00FFFFFF">
            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/home_team_logo"
                    android:translationY="300dp"
                    android:layout_marginStart="20dp"/>
            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/away_team_logo"
                    android:translationY="300dp"
                    android:layout_marginRight="20dp"/>
            <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="20dp"
                    android:translationY="240dp"
                    android:textAlignment="center"
                    android:id="@+id/home_team_name"
                    android:contentDescription="logo of home team"/>
            <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:translationY="240dp"
                    android:textAlignment="center"
                    android:id="@+id/away_team_name"
                    android:contentDescription="logo of home team"/>
            <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:translationY="150dp"
                    android:textAlignment="center"
                    android:id="@+id/match_date"/>
            <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:translationY="190dp"
                    android:textAlignment="center"
                    android:id="@+id/winner_city_distance"/>
            <Button android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:id="@+id/score_one_button"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="20dp"
                    android:translationY="500dp"
                    android:text="edlo"/>
            <Button android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:id="@+id/score_two_button"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:translationY="500dp"
                    android:text="edlo"/>/>
            <Button android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:id="@+id/score_three_button"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="20dp"
                    android:translationY="550dp"
                    android:text="edlo"/>/>
            <Button android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:id="@+id/score_four_button"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:translationY="550dp"
                    android:text="edlo"/>/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>